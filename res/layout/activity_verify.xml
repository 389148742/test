<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaomi.d.voicerecognition.VoiceRegistAty" >

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="开始录音"
        android:textOn="停止录音" />

    <TextView
        android:id="@+id/record_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/toggleButton1"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/toggleButton1"
        android:background="@android:color/transparent" />

    <ToggleButton
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="开始录音"
        android:textOn="停止录音" />
    <Button
        android:id="@+id/regist_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/toggleButton1"
        android:layout_marginTop="20dp"
        android:text="注册" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regist_btn"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent" />

</RelativeLayout>